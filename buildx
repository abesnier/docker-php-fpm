#!/bin/bash

RED='\033[0;31m'
NC='\033[0m'
GREEN='\033[0;32m'

docker buildx bake --provenance=false --push  bases

if [ $? -eq 0 ]
then
  echo -e "${GREEN}Base image build succeeded${NC}"
  # split optional builds in two steps as to reduce CPU load and prevent docker-php-ext-enable timeout
  docker buildx bake --provenance=false --push optional1
  docker buildx bake --provenance=false --push optional2
  if [ $? -eq 0 ]
    then
      echo -e "${GREEN}Base image and Optional image build succeeded${NC}"
#      docker-prune
      exit 0
    else
	  echo -e "${RED}Optional image build failed${NC}"
#          docker-prune
	  exit 1
  fi
else
  echo -e "${RED}Base image build failed${NC}"
#  docker-prune
  exit 1
fi
